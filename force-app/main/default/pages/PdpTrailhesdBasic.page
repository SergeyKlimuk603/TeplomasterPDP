        <apex:pageBlock title="Edit TestObject__c">
            <apex:pageBlockSection >
                <apex:outputField value="{!TestObject__c.Name}"/>
                <apex:outputField value="{!TestObject__c.TextField__c}"/>
                <apex:outputField value="{!TestObject__c.DateTimeField__c}"/>
                <apex:outputField value="{!TestObject__c.NumberField__c}"/>
                <apex:outputField value="{!TestObject__c.TestObjectParent__c}"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
        
        <!-- Without apex:pageBlock -->
        <apex:outputField value="{!TestObject__c.Name}"/>
        <apex:outputField value="{!TestObject__c.TextField__c}"/>
        <apex:outputField value="{!TestObject__c.DateTimeField__c}"/>
        <apex:outputField value="{!TestObject__c.NumberField__c}"/>
        <apex:outputField value="{!TestObject__c.TestObjectParent__c}"/>
