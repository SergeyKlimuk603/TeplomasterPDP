                    <!--Edit Related Records-->
                    <apex:outputLink value="{! URLFOR($Action.TestObjectChild__c.Edit, child.Id) }">
                        Edit
                    </apex:outputLink>
                    &nbsp;
                    <apex:outputLink value="{! URLFOR($Action.TestObjectChild__c.Delete, child.Id) }">
                        Del
                    </apex:outputLink>
                    &nbsp;
                    <apex:outputLink value="{! URLFOR($Action.TestObjectChild__c.View, child.Id) }">
                        View
                    </apex:outputLink>
                </apex:column>
                <apex:column value="{!child.Name}"/>
                <apex:column value="{!child.TextField__c}"/>
                <apex:column value="{!child.NumberField__c}"/>
            </apex:pageBlockTable>
        </apex:pageBlock>

